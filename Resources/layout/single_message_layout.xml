<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
     android:background="#0bfee7"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="367.0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <ImageView
            android:layout_width="118.0dp"
            android:layout_height="180.5dp"
            android:background="@drawable/messageAddImage"
            android:id="@+id/image"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                                android:gravity="center"

                android:text=""
                android:textColor="@android:color/black"
                android:background="@android:color/white"
             android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:id="@+id/textDate" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:id="@+id/toWhoTheMessageIsSent"/>
            <EditText
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="to:"
                android:gravity="center"
                android:id="@+id/textTo" />
            <EditText
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:text=""
                android:hint="title"
                                android:gravity="center"
                             android:layout_width="wrap_content"
                android:layout_height="wrap_content"
      
                android:id="@+id/textTitle" />
            <EditText
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:text=""
                                android:gravity="center"

                android:hint="your content"
             android:layout_width="wrap_content"
                android:layout_height="wrap_content"
      
                android:id="@+id/textContent" />

        </LinearLayout>


    </LinearLayout>

           <ImageButton
            android:background="@drawable/send_single_message_button"
            android:layout_width="134.5dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSend" />
        <ImageButton
            
            android:background="@color/mtrl_btn_transparent_bg_color"
        android:layout_width="211.0dp"
        android:layout_height="140.0dp"
        android:textColor="@android:color/white"
        android:id="@+id/buttonBack"
/>

</LinearLayout>





